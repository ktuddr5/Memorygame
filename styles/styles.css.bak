@charset "utf-8";

:root {
    --page-background-color: #D4D4D4;
    --text-color: #342020;
    --link-color: #67b2e8;
    --link-hover-color: #60bec9;
    --body-font-size: clamp(11pt, 15pt, 17pt);
}

html {
    padding-bottom: 20px;
}

h1 {
    font-size: 3rem;
}

h2 {
    font-size: 1.75rem;
}

/* Body */
body {
    /* Dark mode */
    color: var(--text-color);
    background-color: var(--page-background-color);
}

p {
    font-size: 1.5rem;
}

img {
    width: 270px; /* animal picture sizes  */
    height: 270px;
}

/* Hyperlinks */
a:link {
    color: var(--link-color);
    padding: 2px;
    text-decoration: none;
    display: inline-block;
}

a:visited {
    color: hsla(255, 32%, 58%, 0.79);
    border-color: black;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
    color: var(--link-hover-color);
}

.section-txt {
    text-align: center;
}

.hide-button {
    border-style: outset;
    border-color: #D4D4D4;
    border-radius: 20px;
    background-color: #342020;
    color: #D4D4D4;
    min-width: 20px;
    min-height: 30px;
}
.image-container {
	position: relavite;
	width: 50%;
}
.image-part {
	width: 25%;
	height: 25%;
	overflow: hidden;
    float: left;
    position: relative;
}
.image-part img {
	width: 200%; /* To cover the whole container */
    height: 200%;
    position: absolute;
    top: -50%;
    left: -50%;
}

#game-board > .node {
	border-radius: 10px;
	border-width: 5px;
	border-style:solid;
    border-color: #D4D4D4;
	font-size: 15pt;
}

#start-button-container {
    text-align: center;
}

#start-button {
    text-align: center;
    background-color: #F1F1F1;
    border-color: white;
    font-size: 20pt;
	text-color: #342020;
    color: black;
    min-height: 20px;
    min-width: 40px;
}

#game-description {
    text-align: center;
    font-size: 13pt;
}
